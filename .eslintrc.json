{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-hooks",
    "react-refresh"
  ],
  "rules": {
    "react/jsx-no-target-blank": "off",
    "react-refresh/only-export-components": [
      "warn",
      { "allowConstantExport": true }
    ],
    "no-unused-vars": "warn",
    "no-undef": "off"
  },
  "overrides": [
    {
      "files": ["src/**/*.{js,jsx}"],
      "env": {
        "browser": true,
        "node": false
      }
    },
    {
      "files": ["backend/**/*.{js,jsx}", "api/**/*.{js,jsx}", "lib/**/*.{js,jsx}", "*.config.js"],
      "env": {
        "browser": false,
        "node": true
      }
    }
  ]
}