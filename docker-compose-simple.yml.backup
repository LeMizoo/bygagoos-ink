# docker-compose-simple.yml - Version simple CORRIGÉE
version: '3.8'

services:
  # --- Backend simplifié ---
  backend:
    image: node:18-alpine
    container_name: bygagoos-simple-backend
    ports:
      - "3001:3001"
    working_dir: /app
    volumes:
      - ./simple-server.js:/app/server.js
    command: >
      sh -c "
      npm init -y &&
      npm install express cors bcryptjs jsonwebtoken &&
      node server.js
      "
    networks:
      - bygagoos-net
    restart: unless-stopped

  # --- Frontend simplifié ---
  frontend:
    build: 
      context: ./frontend
      dockerfile: Dockerfile.dev
    container_name: bygagoos-simple-frontend
    ports:
      - "5173:5173"
    environment:
      - VITE_API_URL=http://localhost:3001
    volumes:
      - ./frontend:/app
      - /app/node_modules
    networks:
      - bygagoos-net
    stdin_open: true
    tty: true
    restart: unless-stopped

networks:
  bygagoos-net:
    driver: bridge