# .env.production - Configuration pour XAMPP Production

# ===========================================
# ENVIRONNEMENT
# ===========================================
NODE_ENV=production
PORT=3001
FRONTEND_URL=http://bygagoos-ink.local

# ===========================================
# BASE DE DONNÉES - PostgreSQL
# ===========================================
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://bygagoos_app:ByGagoosApp2025!@localhost:5432/bygagoos_ink"

# Alternative MySQL (si utilisation de XAMPP MySQL)
# DATABASE_URL="mysql://bygagoos_app:ByGagoosApp2025!@localhost:3306/bygagoos_ink"

# ===========================================
# SÉCURITÉ - JWT
# ===========================================
# À générer avec: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_here_64_characters_minimum
JWT_REFRESH_SECRET=your_secure_refresh_secret_here_64_characters_minimum

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# CLOUDINARY (optionnel)
# ===========================================
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ===========================================
# SESSION & COOKIES
# ===========================================
SESSION_SECRET=your_session_secret_here
COOKIE_DOMAIN=bygagoos-ink.local
COOKIE_SECURE=false
COOKIE_HTTPONLY=true

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=http://bygagoos-ink.local,http://localhost
CORS_CREDENTIALS=true
