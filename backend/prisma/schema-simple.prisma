generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  hashedPassword String
  firstName     String?
  lastName      String?
  name          String?
  role          String    @default("FAMILY_MEMBER")
  familyRole    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
