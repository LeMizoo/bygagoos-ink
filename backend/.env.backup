# backend/.env - VERSION CORRIGÉE

# PostgreSQL Docker
DATABASE_URL=postgresql://postgres:password@postgres:5432/bygagoos_ink?schema=public

# PostgreSQL Local
LOCAL_DATABASE_URL=postgresql://postgres:password@localhost:5432/bygagoos_ink?schema=public

# Sécurité
JWT_SECRET=bygagoos-super-secret-key-2025-change-in-production
JWT_EXPIRES_IN=7d

# Serveur
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Application
APP_NAME=ByGagoos_Ink_API
APP_VERSION=2.1.0

# Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Docker spécifique
DOCKER_DATABASE_URL=postgresql://postgres:password@postgres:5432/bygagoos_ink?schema=public